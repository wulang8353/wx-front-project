/* components/epsoide/epsoide-cmp.wxss */
.container {
  display: inline-flex;
  flex-direction: row;
  height: 60rpx;
}

.index-container {
  display: flex;
  flex-direction: row;
  /* 底部对齐 */
  align-items: baseline;
}

.plain {
  font-size: 32rpx;
}

.index {
  font-size: 60rpx;
  line-height:60rpx; 
  font-weight: 800;
  margin-right: 14rpx;
}

.vertical-line {
  margin-right: 14rpx;
  height: 44rpx;
  border-left: 1px solid black;
}

.date {
  display: flex;
  flex-direction: column;
  /* margin-top: 5rpx; */
}

.month {
  font-size: 24rpx;
  line-height: 24prx;
}

.year {
  font-size: 20rpx;
  line-height: 20prx;
}
